<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container_recyclerview"
    tools:context="jaenwawe.miniInventory.ActivityRecyclerView">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5adb39">

        <ImageView android:id="@+id/action_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/pen"
             />
    </android.support.v7.widget.Toolbar>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/framelayout_container_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
